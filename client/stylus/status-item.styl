.status-item 
  list-style-type: none
  padding: 20px
  margin: 0 0 20px 0
  transition: all 0.2s ease-out
  word-break: break-word
  .details 
    font-family: monospace
    font-size: .9em
    overflow: hidden
    transition: all 0.2s ease-out
  
  .details-hidden
    padding-top: 0px
    max-height: 0
    
  .details-visible
    padding-top: 20px
    max-height: 1000px
    
  &.warning
    color: #8a6d3b
    background-color: #fcf8e3
    border-color: #faebcc
    a 
      color: #8a6d3b
  &.warning button
    background-color: #8a6d3b
    color: #fff
    
  &.passing
    color: #3c763d
    background-color: #dff0d8
    border-color: #d6e9c6
    a 
      color: #3c763d
    
    
  &.failing
    color: #a94442
    background-color: #f2dede
    border-color: #ebccd1
    a 
      color: #a94442
  &.failing button
    background-color: #a94442
    color: #fff
    
  &.loading
    color: #31708f
    background-color: #d9edf7
    border-color: #bce8f1
    a 
      color: #31708f
    
  button
    cursor: pointer
    border: 0;
    border-radius: 3px;
    display: block;
    margin-top: 7px;
    &:focus
      outline: none